<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: { class: 'devise-form'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :name, class: 'field__label' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'field__label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field__form' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'field__label' %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'field__form' %>
    <% if @minimum_password_length %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'field__label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'field__label' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'field__form' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'submit' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
