<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'devise-form'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :name, class: 'field__label' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'field__label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'field__label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'field__label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field__form' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
