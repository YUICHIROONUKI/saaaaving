<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-form'} ) do |f| %>
  <div class="field">
    <%= f.label :name, class: 'field__label' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'field__label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field__form' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'field__label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'field__form' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="remember">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
